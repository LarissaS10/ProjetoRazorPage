@page
@model Projeto_AT_DotNet.Pages.Clientes.CreateClienteModel
@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<h1>@ViewData["Title"]</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <input asp-for="Cliente.Nome" class="form-control" />
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control" type="email" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Cadastrar Cliente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}