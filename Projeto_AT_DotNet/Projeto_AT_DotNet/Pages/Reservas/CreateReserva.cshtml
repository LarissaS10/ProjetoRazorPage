@page
@model Projeto_AT_DotNet.Pages.Reservas.CreateReservaModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Criar Reserva";
}

<h1>@ViewData["Title"]</h1>
<p class="lead">Validação: Todos os campos são de preenchimento obrigatório.</p>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.ClienteId" class="control-label">Cliente</label>
                <select asp-for="Reserva.ClienteId" class="form-control" asp-items="@(new SelectList(Model.Clientes, "Id", "Nome"))">
                    <option value="">-- Selecione o Cliente --</option>
                </select>
                <span asp-validation-for="Reserva.ClienteId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.PacoteTuristicoId" class="control-label">Pacote Turístico</label>
                <select asp-for="Reserva.PacoteTuristicoId" class="form-control" asp-items="@(new SelectList(Model.Pacotes, "Id", "Titulo"))">
                    <option value="">-- Selecione o Pacote --</option>
                </select>
                <span asp-validation-for="Reserva.PacoteTuristicoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reserva.DataReserva" class="control-label"></label>
                <input asp-for="Reserva.DataReserva" class="form-control" type="date" />
                <span asp-validation-for="Reserva.DataReserva" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Criar Reserva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}